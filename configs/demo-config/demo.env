# QuantumLayer Demo Environment Configuration
# Always Demo-Ready Mode

# Core Demo Settings
DEMO_MODE=true
ENVIRONMENT=demo
NODE_ENV=demo

# Feature Flags
FEATURE_ALL_UNLOCKED=true
FEATURE_INSTANT_GENERATION=true
FEATURE_PERFECT_SUCCESS=true
FEATURE_IMPRESSIVE_METRICS=true
FEATURE_GUIDED_FLOW=true
FEATURE_AUTO_RECOVERY=true
FEATURE_SPECTACULAR_VISUALS=true

# Performance Optimization
CACHE_STRATEGY=aggressive
CACHE_TTL=3600
PRELOAD_CONTENT=true
CDN_FIRST=true
RESPONSE_TIME_TARGET=100

# Demo Data Settings
USE_SUCCESS_STORIES=true
SHOW_BEST_METRICS=true
ROTATE_EXAMPLES=true
HIDE_SENSITIVE_DATA=true

# LLM Configuration for Demo
LLM_PROVIDER=cached
LLM_FALLBACK_PROVIDER=groq
LLM_TIMEOUT=5000
LLM_CACHE_RESPONSES=true

# Golden Path Settings
GOLDEN_PATH_ENABLED=true
GOLDEN_PATH_CACHE_DIR=/var/cache/demo/golden-paths
GOLDEN_PATH_TIMEOUT=60000

# Demo Database
DEMO_DB_HOST=demo-postgres
DEMO_DB_PORT=5432
DEMO_DB_NAME=quantumlayer_demo
DEMO_DB_USER=demo_user
DEMO_DB_RESET_INTERVAL=3600

# Redis Cache for Demo
REDIS_DEMO_HOST=demo-redis
REDIS_DEMO_PORT=6379
REDIS_DEMO_DB=0
REDIS_DEMO_TTL=7200

# Monitoring
DEMO_MONITORING_ENABLED=true
DEMO_METRICS_INTERVAL=10
DEMO_HEALTH_CHECK_INTERVAL=60
DEMO_ALERT_CHANNEL=demo-team-slack

# Recovery Settings
ENABLE_AUTO_RECOVERY=true
FALLBACK_TO_CACHED=true
BACKUP_DEMO_PATH=/var/demo/backups
CROWD_PLEASER_THRESHOLD=5

# Presenter Assist
PRESENTER_HINTS=true
PRESENTER_GUIDE_LEVEL=verbose
NEXT_ACTION_SUGGESTIONS=true

# Content Rotation
ROTATE_SUCCESS_STORIES=true
ROTATION_INTERVAL=3600
CONTENT_REFRESH_DAILY=true
METRIC_UPDATE_REALTIME=true

# Visual Settings
ANIMATION_LEVEL=spectacular
TRANSITION_SPEED=fast
SUCCESS_CELEBRATIONS=true
PARTICLE_EFFECTS=true

# Demo Stream Settings
STREAM_ENABLED=true
STREAM_PLATFORM=twitch,youtube
STREAM_SCHEDULE=continuous
STREAM_QUALITY=1080p60fps

# Security (Demo Mode)
DEMO_AUTH_BYPASS=true
DEMO_RATE_LIMIT_DISABLED=true
DEMO_CORS_ALLOW_ALL=true

# Logging
DEMO_LOG_LEVEL=info
DEMO_LOG_SUCCESS_ONLY=true
DEMO_LOG_METRICS=true
DEMO_LOG_DIR=/var/log/demo