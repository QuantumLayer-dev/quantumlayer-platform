# QuantumLayer Platform Environment Variables
# Copy this to .env and fill in your values

# Environment
NODE_ENV=development
ENVIRONMENT=development

# Database
DATABASE_URL=postgresql://quantum:quantum123@localhost:5432/quantumlayer
DATABASE_POOL_SIZE=20

# Redis
REDIS_URL=redis://localhost:6379
REDIS_TTL=3600

# Qdrant Vector Database
QDRANT_URL=http://localhost:6333
QDRANT_API_KEY=

# NATS Messaging
NATS_URL=nats://localhost:4222

# Temporal Workflow
TEMPORAL_ADDRESS=localhost:7233
TEMPORAL_NAMESPACE=default

# S3/MinIO Storage
S3_ENDPOINT=http://localhost:9000
S3_ACCESS_KEY=minioadmin
S3_SECRET_KEY=minioadmin
S3_BUCKET=quantumlayer
S3_REGION=us-east-1

# LLM Providers
OPENAI_API_KEY=
ANTHROPIC_API_KEY=
GROQ_API_KEY=
AWS_BEDROCK_REGION=us-east-1
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AZURE_OPENAI_ENDPOINT=
AZURE_OPENAI_KEY=

# Authentication (Clerk)
CLERK_PUBLISHABLE_KEY=
CLERK_SECRET_KEY=
NEXT_PUBLIC_CLERK_PUBLISHABLE_KEY=

# Stripe Billing
STRIPE_SECRET_KEY=
STRIPE_PUBLISHABLE_KEY=
STRIPE_WEBHOOK_SECRET=

# API Configuration
API_PORT=8000
API_HOST=0.0.0.0
GRAPHQL_ENDPOINT=http://localhost:8000/graphql
REST_API_BASE=http://localhost:8000/api/v1

# Frontend
NEXT_PUBLIC_API_URL=http://localhost:8000
NEXT_PUBLIC_WS_URL=ws://localhost:8000
FRONTEND_URL=http://localhost:3000

# Security
JWT_SECRET=change-this-to-a-random-string
ENCRYPTION_KEY=32-character-encryption-key-here
HASH_SALT=10

# Rate Limiting
RATE_LIMIT_REQUESTS_PER_MINUTE=100
RATE_LIMIT_ENABLED=true

# Monitoring
PROMETHEUS_PORT=9090
GRAFANA_PORT=3001
GRAFANA_ADMIN_PASSWORD=admin

# Feature Flags
FEATURE_MULTI_LLM=true
FEATURE_AGENT_SYSTEM=true
FEATURE_PREVIEW_DEPLOY=true
FEATURE_MARKETPLACE=false

# Logging
LOG_LEVEL=info
LOG_FORMAT=json
LOG_TO_FILE=false

# Development
HOT_RELOAD=true
DEBUG=true
VERBOSE_ERRORS=true